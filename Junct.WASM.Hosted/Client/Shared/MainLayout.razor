@inherits LayoutComponentBase

<Layout Class="flex-container" Style="flex-direction: column;">
    <LayoutHeader Fixed="true" Style="height: 20%; width: 100%; z-index: 2;">
        <NavMenu />
    </LayoutHeader>
    <Layout Sider="true" Style="height: 70%; width: 100%; z-index: 1;">
        <LayoutSider>
            <LayoutSiderContent Style="width: 20%;">
                <SideBar />
            </LayoutSiderContent>
        </LayoutSider>
        <Layout Class="bg-dark" Style="align-content: center; width: 80%; z-index: 4;">
            @Body
        </Layout>
    </Layout>
    <LayoutFooter Fixed="true" Style="height: 10%; width: 100%; z-index: 0;">
        <Footer />
    </LayoutFooter>
</Layout>